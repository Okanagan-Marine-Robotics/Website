---
import Features2 from "~/components/widgets/Features2.astro";
import Features3 from "~/components/widgets/Features3.astro";
import Hero from "~/components/widgets/Hero.astro";
import Stats from "~/components/widgets/Stats.astro";
import Steps2 from "~/components/widgets/Steps2.astro";
import Layout from "~/layouts/PageLayout.astro";
import workingteam from "../assets/images/workingteam.jpg";
import Grid from "~/components/blog/Grid.astro";

const metadata = {
  title: "Sponsors",
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Sponsors"
    image={{
      src: workingteam,
      alt: "Image of our team working",
    }}
  >
    <Fragment slot="title">
      We would like to thank all of our<br />
      <span class="text-accent dark:text-white highlight">
        Amazing Sponsors</span
      >
    </Fragment>

    <Fragment slot="subtitle">
      First of all, We would like to give a massive thank you to all of our
      sponsors. Your generosity with your time, resources, and support has been
      invaluable to us. We are so grateful as none of this would be possible
      without you.
    </Fragment>
  </Hero>
  <Features2
    title="Our Sponsors"
    items={[
      {
        title: "Professional Activities Fund",
        description: "Helping us with funding",
      },
      {
        title: "Okanagan Engineering Society",
        description: "Providing us with funding",
      },
      {
        title: "Cellula Robotics",
        description:
          "Amazing support and mentorship, as well as generously allowing us to borrow their DVL",
      },
      {
        title: "Mearls Machine Shop",
        description: "Providing us with 3D printing services for our AUV",
      },
      {
        title: "Rocky Mountain Motion Control",
        description:
          "Providing us with a discount on parts for our mechanical design",
      },
      {
        title: "Bloom Technical",
        description: "to be updated",
      },
      {
        title: "Blue Robotics",
        description: "to be updated",
      },
      {
        title: "Mouser Electronics",
        description: "to be updated",
      },
      {
        title: "Tuum Est Student Initiative Fund",
        description: "to be updated",
      },
    ]}
  />
</Layout>
