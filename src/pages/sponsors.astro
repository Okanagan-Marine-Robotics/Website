---
import Features2 from "~/components/widgets/Features2.astro";
import Features3 from "~/components/widgets/Features3.astro";
import Hero from "~/components/widgets/Hero.astro";
import Stats from "~/components/widgets/Stats.astro";
import Steps2 from "~/components/widgets/Steps2.astro";
import Layout from "~/layouts/PageLayout.astro";
import workingteam from "../assets/images/workingteam.jpg";
import Grid from "~/components/blog/Grid.astro";
import Image from "~/components/common/Image.astro";

import BloomTechnical from "../assets/images/sponsors/BloomTechnical.png";
import BlueRobotics from "../assets/images/sponsors/BlueRobotics.png";
import CellulaRobotics from "../assets/images/sponsors/CellulaRobotics.png";
import Mouser from "../assets/images/sponsors/Mouser.png";
import RMMC from "../assets/images/sponsors/RMMC.png";
import Mearls from "../assets/images/sponsors/Mearls.png";
import Button from "~/components/ui/Button.astro";
import PDFViewer from "~/components/react/PDFViewer";
import sponsorshipPackage from "../assets/pdf/Sponsorship Package - Okanagan Marine Design 2024.pdf";

const metadata = {
  title: "Sponsors",
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Sponsors"
    image={{
      src: workingteam,
      alt: "Image of our team working",
    }}
  >
    <Fragment slot="title">
      Marine Design extends gratitude to our<br />
      <span class="text-accent dark:text-white highlight">
        Industry Sponsors</span
      >
    </Fragment>

    <Fragment slot="subtitle">
      We would like to give a massive thank you to all of our sponsors. Your
      generosity with your time, resources, and support has been invaluable to
      us. We are so grateful as none of this would be possible without you.
    </Fragment>
  </Hero>

  <div
    class="relative px-4 md:px-6 py-12 md:py-16 lg:py-20 text-default max-w-7xl mx-auto"
  >
    <div class="flex flex-row justify-center">
      <h2
        class="font-bold leading-tighter tracking-tighter font-heading text-heading text-3xl md:text-4xl"
      >
        Our Sponsors
      </h2>
    </div>
    <div class="flex flex-row justify-center mt-16">
      <div class="grid lg:grid-cols-2 xl:grid-cols-3 gap-24 px-20">
        <div
          class="dark:bg-slate-700 border dark:border-slate-500 shadow-[0_4px_30px_rgba(0,0,0,0.1)] p-4 rounded-lg flex flex-row justify-center"
        >
          <div class="flex flex-col">
            <Image
              src={CellulaRobotics}
              alt="Astrowind Logo"
              class="!object-scale-down"
            />
            <p class="text-xl text-muted mb-6 dark:text-slate-300">
              Amazing support and mentorship, as well as generously allowing us
              to borrow their DVL
            </p>
          </div>
        </div>
        <div
          class="dark:bg-slate-700 border dark:border-slate-500 shadow-[0_4px_30px_rgba(0,0,0,0.1)] p-4 rounded-lg flex flex-row justify-center"
        >
          <div class="flex flex-col justify-center">
            <Image
              src={BloomTechnical}
              alt="Astrowind Logo"
              class="!object-scale-down"
              width={200}
            />
          </div>
        </div>
        <div
          class="dark:bg-slate-700 border dark:border-slate-500 shadow-[0_4px_30px_rgba(0,0,0,0.1)] p-4 rounded-lg flex flex-row justify-center"
        >
          <Image
            src={BlueRobotics}
            alt="Astrowind Logo"
            class="!object-scale-down"
          />
        </div>
        <div
          class="dark:bg-slate-700 border dark:border-slate-500 shadow-[0_4px_30px_rgba(0,0,0,0.1)] p-4 rounded-lg flex flex-row justify-center"
        >
          <Image src={Mouser} alt="Astrowind Logo" class="!object-scale-down" />
        </div>
        <div
          class="dark:bg-slate-700 border dark:border-slate-500 shadow-[0_4px_30px_rgba(0,0,0,0.1)] p-4 rounded-lg flex flex-row justify-center"
        >
          <Image src={RMMC} alt="Astrowind Logo" class="!object-scale-down" />
        </div>
        <div
          class="dark:bg-slate-700 border dark:border-slate-500 shadow-[0_4px_30px_rgba(0,0,0,0.1)] p-4 rounded-lg flex flex-row justify-center"
        >
          <Image
            src={Mearls}
            alt="Astrowind Logo"
            class="!object-scale-down filter dark:brightness-[10000000%]"
          />
        </div>
      </div>
    </div>
    <div class="flex flex-row justify-center mt-16">
      <div class="flex-col flex">
        <h2
          class="font-bold leading-tighter tracking-tighter font-heading text-heading text-center text-3xl md:text-4xl"
        >
          Are you interested in sponsoring us?
        </h2>
        <div class="flex flex-row justify-center mb-4">
          <Button href="/contact-sponsor" class="mt-4" variant="primary">
            Contact Us
          </Button>
          <Button
            href={sponsorshipPackage}
            class="mt-4 ml-4"
            variant="secondary"
            icon="tabler:download"
          >
            Sponsorship Package
          </Button>
        </div>
        <PDFViewer pdfUrl={sponsorshipPackage} client:load />
      </div>
    </div>
  </div>
</Layout>
